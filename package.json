{
  "name": "tazz-cli",
  "version": "1.0.0",
  "description": "AI-powered task orchestrator with git worktrees, tmux sessions, and MCP integration",
  "keywords": [
    "ai",
    "claude",
    "mcp",
    "git",
    "tmux",
    "task-management",
    "development"
  ],
  "author": "Tazz Development Team",
  "license": "MIT",
  "bin": {
    "tazz": "./bin/tazz"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates",
    "hooks"
  ],
  "scripts": {
    "build": "node build-simple.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "test:watch": "vitest --watch",
    "lint": "eslint src tests --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "release": "semantic-release"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cosmiconfig": "^8.3.6",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "inquirer": "^9.3.7",
    "markdown-it": "^13.0.2",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1",
    "simple-git": "^3.20.0",
    "winston": "^3.11.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.21",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.8",
    "tsup": "^8.0.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tazz-dev/tazz-cli.git"
  },
  "bugs": {
    "url": "https://github.com/tazz-dev/tazz-cli/issues"
  },
  "homepage": "https://github.com/tazz-dev/tazz-cli#readme"

